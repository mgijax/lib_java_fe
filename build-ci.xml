<project name="lib_java_fe" default="jar" basedir=".">
  <!-- somewhat bogus build.xml file - still learning ant -->
    
  <description>
    lib_java_fe build file
  </description>

  <property name="src" location="java"/>
  <property name="build" location="build"/>
  <property name="dist" location="dist"/>
  <property name="deploy" location="dist"/>

  <!-- init -->
  <target name="init">
    <mkdir dir="${build}"/>
    <mkdir dir="${dist}"/>
  </target>

  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} directory tree -->
    <delete dir="${build}"/>
  </target>  

  

  <!-- compile -->
  <target name="compile" depends="clean, init" >
    <javac debug="on" srcdir="${src}" destdir="${build}" >
    </javac>
  </target>
  
  
  <target name="jar" depends="compile"
          description="Generates a jar.">
     <jar jarfile="${dist}/fe.jar"
          basedir="${build}"
          excludes="**/*Test.class">
     </jar>          
  </target>
	


</project>